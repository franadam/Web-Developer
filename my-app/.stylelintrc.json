{
    "env": {
        "browser": true
    },
    "extends":  "stylelint-config-standard",
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "ignoreFiles": [
        "src/scss/vendor/**/*.scss"
    ],
    "rules": {
      "number-leading-zero": null,
      "order/order": [
          "custom-properties",
          "declarations"
      ],
      "order/properties-alphabetical-order": true
    }
}